{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": [
        "../../littlejs/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/main.ts",
    "../../littlejs/littlejs.d.ts"
  ]
}
